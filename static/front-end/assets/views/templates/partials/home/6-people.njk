{% set people = [
  {
    image: "/img/objects/member-1.jpg",
    name: "Tom Riddle",
    title: "CEO - FOUNDER",
    brief: "PT Serif: Pt Serif has a strong base, easy to read at small size and low contrast. The Square Base makes a nice contrast with round geometric"
  },
  {
    image: "/img/objects/member-2.jpg",
    name: "Sofie Mcintosh",
    title: "PRODUCT MANAGER",
    brief: "PT Serif: Pt Serif has a strong base, easy to read at small size and low contrast. The Square Base makes a nice contrast with round geometric"
  },
  {
    image: "/img/objects/member-3.jpg",
    name: "Saba Wilkins",
    title: "HEAD OF CUSTOMER SERVICE",
    brief: "PT Serif: Pt Serif has a strong base, easy to read at small size and low contrast. The Square Base makes a nice contrast with round geometric"
  }
] %}

<section class="section">
  <div class="section__inner container padding-y-xxl">
    <div class="grid grid-gap-xxl justify-content-center">
      <div class="col-10@md">
        <div class="grid grid-gap-xxl justify-content-between">
          <div class="col-5@md">
            <h2 class="text-xxxl section__title">Our <span>People</span></h2>
          </div>
          <div class="col-6@md">
            <div class="text-component margin-top-xxxl@lg">
              <h4>If you’re looking to make an impact, we’re looking for you.</h4>
              <p>Our people are passionate and driven, they’re good people who like to create awesome things. They have a single goal—to always keep pushing forward and delivering the best product for our customers.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="col-12">
        <div class="grid grid-gap-lg">
          {% for item in people %}
            <div class="col-4@md">
              <div class="crop crop--fit margin-bottom-md">
                <img data-src="{{ item.image }}" alt="{{ item.name }}" class="crop__content to-animate" data-animate="zoom-in">
              </div>

              <div class="text-component">
                <p class="text-lg font-weight-bold margin-bottom-0 text-color-primary-darker">{{ item.name }}</p>
                <p class="text-sm text-dim margin-bottom-md text-uppercase">{{ item.title }}</p>
                <p>{{ item.brief }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>